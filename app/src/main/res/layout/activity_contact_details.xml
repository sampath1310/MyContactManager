<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yomeon.mycontactmanager.ContactDetails">
    <include layout="@layout/add_contact_toolbar"
        android:id="@id/my_toolbar_add_contact"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_below="@id/my_toolbar_add_contact">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="35sp"
          android:text="Contact Profile"
          android:gravity="center_horizontal"
          android:id="@+id/contact_profile" />
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/text_first"
        android:textSize="25sp"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/text_last"
        android:textSize="25sp"/>

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/text_email"
        android:textSize="25sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/text_number"
            android:textSize="25sp"/>
    </LinearLayout>

</RelativeLayout>
